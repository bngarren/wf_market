{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "sourceMap": false,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
